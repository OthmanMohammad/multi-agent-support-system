# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
#
# Copy this file to .env.local and fill in the values
# Never commit .env.local to version control!

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# Development: http://localhost:8000
# Production: https://your-oracle-cloud-ip or https://your-domain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================

# NextAuth URL (your frontend URL)
# Development: http://localhost:3000
# Production: https://your-vercel-app.vercel.app
NEXTAUTH_URL=http://localhost:3000

# NextAuth Secret (generate with: openssl rand -base64 32)
# REQUIRED: Must be at least 32 characters
NEXTAUTH_SECRET=your-secret-key-min-32-chars-change-this-in-production

# =============================================================================
# OAUTH (Optional - for Google/GitHub login)
# =============================================================================

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Mock Service Worker (for development with fake data)
# Set to "false" to use real backend
NEXT_PUBLIC_ENABLE_MSW=false

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Node environment (automatically set by Next.js)
# NODE_ENV=development
